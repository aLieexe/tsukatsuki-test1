// Automatically reboot *WITHOUT CONFIRMATION* if
// If the file /var/run/reboot-required is found after the upgrade
// Said file will be automatically, if the it update modify key parts of the system 
Unattended-Upgrade::Automatic-Reboot "{{ unattended_upgrades_reboot | lower }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ unattended_upgrades_reboot_time }}";

// Do automatic removal of unused packages after the upgrade
// (equivalent to apt-get autoremove)
Unattended-Upgrade::Remove-Unused-Dependencies "{{ unattended_upgrades_remove_unused | lower }}";

// Automatically reboot even if there are users currently logged in
// when Unattended-Upgrade::Automatic-Reboot is set to true
Unattended-Upgrade::Automatic-Reboot-WithUsers "{{ unattended_upgrades_reboot_with_users | lower }}";

// Follow the one set in /etc/os-release
Unattended-Upgrade::Origins-Pattern {
    "origin=${distro_id},codename=${distro_codename}";
    "origin=${distro_id},codename=${distro_codename}-security";
    "origin=${distro_id},codename=${distro_codename}-updates";
};